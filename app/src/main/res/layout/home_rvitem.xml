<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <cn.bingoogolapple.badgeview.BGABadgeLinearLayout
        android:id="@+id/homerv_item_badge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        app:badge_dragable="false"
        app:badge_gravity="rightTop"
        app:badge_padding="5dp">

        <RelativeLayout
            android:id="@+id/home_rvitem_rl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="@dimen/x5"
            android:padding="@dimen/x5"
            >

            <ImageView
                android:id="@+id/home_rvitem_img"
                android:layout_width="@dimen/x30"
                android:layout_height="@dimen/x30"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="@dimen/x5" />

            <TextView
                android:id="@+id/home_rvitem_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/home_rvitem_img"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:text=""
                android:textColor="@color/white"
                android:textSize="@dimen/x12" />

        </RelativeLayout>
    </cn.bingoogolapple.badgeview.BGABadgeLinearLayout>

</RelativeLayout>
