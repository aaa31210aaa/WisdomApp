<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_color"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context="tab.homedetail.lawsdetail.LawsDetail">

   <include layout="@layout/common_title"></include>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x260"
        android:layout_below="@+id/appbarlayout"
        android:background="@color/gray_bg"
        android:paddingBottom="@dimen/x5"
        android:orientation="vertical">

        <LinearLayout style="@style/SgxqLL">

            <TextView
                style="@style/SgxqTitle"
                android:text="法律法规名称" />

            <TextView
                android:id="@+id/laws_detail_lrtitle"
                style="@style/SgxqContent"
                android:text="" />

        </LinearLayout>


        <LinearLayout style="@style/SgxqLL">

            <TextView
                style="@style/SgxqTitle"
                android:text="所属行业" />

            <TextView
                android:id="@+id/laws_detail_industryname"
                style="@style/SgxqContent" />

        </LinearLayout>


        <LinearLayout style="@style/SgxqLL">

            <TextView
                style="@style/SgxqTitle"
                android:text="所属类别" />

            <TextView
                android:id="@+id/laws_detail_lrtypename"
                style="@style/SgxqContent" />

        </LinearLayout>

        <LinearLayout style="@style/SgxqLL">

            <TextView
                style="@style/SgxqTitle"
                android:text="文号" />

            <TextView
                android:id="@+id/laws_detail_docnumber"
                style="@style/SgxqContent" />

        </LinearLayout>


        <LinearLayout style="@style/SgxqLL">

            <TextView
                style="@style/SgxqTitle"
                android:text="颁布时间" />

            <TextView
                android:id="@+id/laws_detail_bbdate"
                style="@style/SgxqContent" />

        </LinearLayout>


        <LinearLayout style="@style/SgxqLL">

            <TextView
                style="@style/SgxqTitle"
                android:text="生效时间" />

            <TextView
                android:id="@+id/laws_detail_effdate"
                style="@style/SgxqContent" />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20px"
            android:layout_marginTop="20px"
            android:text="法律法规信息" />

        <TextView
            android:id="@+id/laws_detail_item_lrdesc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/x5"
            android:background="@drawable/editext_yb"
            android:minHeight="@dimen/x50"
            android:padding="5px"
            android:text="" />

    </LinearLayout>

    <ListView
        android:id="@+id/laws_detail_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"></ListView>


</LinearLayout>
