<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_color"
    android:fitsSystemWindows="true"
    tools:context="tab.homedetail.Safety">

    <include layout="@layout/common_title"></include>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/appbarlayout"
        android:background="@color/white">

        <RelativeLayout
            android:id="@+id/safety_plan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_margin="@dimen/x10"
            android:background="@drawable/editext_bk">

            <ImageView
                android:id="@+id/safety_plan_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_margin="@dimen/x10"
                android:background="@drawable/aqjcjh" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/x2"
                android:layout_toRightOf="@id/safety_plan_img"
                android:text="安全自查计划" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/safety_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/safety_plan"
            android:layout_margin="@dimen/x10"
            android:background="@drawable/editext_bk">

            <ImageView
                android:id="@+id/safety_content_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_margin="@dimen/x10"
                android:background="@drawable/aqjcnr" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/x10"
                android:layout_toRightOf="@id/safety_content_img"
                android:text="安全自查内容" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/safety_record"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/safety_content"
            android:layout_margin="@dimen/x10"
            android:background="@drawable/editext_bk">

            <ImageView
                android:id="@+id/safety_record_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_margin="@dimen/x10"
                android:background="@drawable/aqjcjl" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/x10"
                android:layout_toRightOf="@id/safety_record_img"
                android:text="安全自查记录" />

        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>
