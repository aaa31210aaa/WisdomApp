<?xml version="1.0" encoding="utf-8"?>
<cn.bingoogolapple.badgeview.BGABadgeLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/notice_item_badge"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:gravity="center"
    app:badge_dragable="false"
    app:badge_gravity="rightTop"
    app:badge_padding="@dimen/x5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/notice_item_title"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:lines="1"
            android:maxEms="18"
            android:padding="@dimen/x10"
            android:text="标题"
            android:textColor="@color/main_color"
            android:textSize="@dimen/x15" />

        <TextView
            android:id="@+id/notice_item_mestime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/x10"
            android:text="2016-12-1" />
    </LinearLayout>
</cn.bingoogolapple.badgeview.BGABadgeLinearLayout>