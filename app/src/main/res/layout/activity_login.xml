<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login"
    tools:context="demo.yqh.wisdomapp.Login">

    <TextView
        android:id="@+id/login_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/x50"
        android:text="郴州市桂阳县"
        android:textColor="@color/white"
        android:textSize="@dimen/x20" />

    <TextView
        android:id="@+id/login_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/login_title"
        android:layout_centerHorizontal="true"
        android:text="智慧安监信息化综合监管平台"
        android:textColor="@color/white"
        android:textSize="@dimen/x18" />

    <EditText
        android:id="@+id/accountEtv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/login_subtitle"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/x20"
        android:background="@drawable/editext_login"
        android:drawableLeft="@drawable/icon_account"
        android:paddingBottom="@dimen/x10"
        android:paddingLeft="@dimen/x20"
        android:paddingTop="@dimen/x10"
        android:text=""
        android:textColor="@color/white" />

    <EditText
        android:id="@+id/pwdEtv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/accountEtv"
        android:layout_marginTop="@dimen/x5"
        android:background="@drawable/editext_login"
        android:drawableLeft="@drawable/icon_pwd"
        android:inputType="textPassword"
        android:paddingBottom="@dimen/x10"
        android:paddingLeft="@dimen/x20"
        android:paddingTop="@dimen/x10"
        android:textColor="@color/white" />

    <LinearLayout
        android:id="@+id/acc_pwd_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pwdEtv"
        android:layout_marginTop="@dimen/x20"
        android:gravity="center">

        <CheckBox
            android:id="@+id/saveAccountCb"
            style="@style/CustomCheckBoxTheme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/x20"
            android:text="记住账号"
            android:textColor="@color/white" />

        <CheckBox
            android:id="@+id/savePwdCb"
            style="@style/CustomCheckBoxTheme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="记住密码"
            android:textColor="@color/white" />

    </LinearLayout>


    <Button
        android:id="@+id/loginBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/acc_pwd_ll"
        android:layout_marginLeft="@dimen/x50"
        android:layout_marginRight="@dimen/x50"
        android:layout_marginTop="@dimen/x30"
        android:background="@drawable/login_btn_style"
        android:text="登陆"
        android:textColor="@color/white" />


</RelativeLayout>
