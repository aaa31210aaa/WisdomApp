<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/filelist_item_filename"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="6"
            android:padding="@dimen/x5"
            android:text="文件名字"
            android:textColor="@color/blue_deep" />


        <TextView
            android:id="@+id/filelist_item_downopen"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center"
            android:text="下载"
            android:textStyle="bold" />

        <!--<ImageView-->
        <!--android:id="@+id/filelist_item_cancel"-->
        <!--android:layout_width="0dp"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_weight="2"-->
        <!--android:padding="30px"-->
        <!--android:src="@drawable/clear" />-->

        <ImageView
            android:id="@+id/filelist_item_delete"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:padding="@dimen/x5"
            android:src="@drawable/deletefile" />
    </LinearLayout>

</LinearLayout>
