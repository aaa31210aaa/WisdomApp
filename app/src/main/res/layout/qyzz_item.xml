<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.9"
        android:orientation="vertical">

        <TextView
            android:id="@+id/qyzz_item_cftypename"
            style="@style/TextStyle" />

        <TextView
            android:id="@+id/qyzz_item_certificate"
            style="@style/TextStyle" />

        <TextView
            android:id="@+id/qyzz_item_cardname"
            style="@style/TextStyle" />

        <TextView
            android:id="@+id/qyzz_item_administrator"
            style="@style/TextStyle" />
        <TextView
            android:id="@+id/qyzz_item_carddate"
            style="@style/TextStyle" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="0.1"
        android:gravity="center">

        <include layout="@layout/right_arrow"></include>

    </LinearLayout>

</LinearLayout>
