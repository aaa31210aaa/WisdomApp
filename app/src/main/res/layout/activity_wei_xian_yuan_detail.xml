<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_color"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context="tab.homedetail.enterprisedetail.WeiXianYuanDetail">

    <include layout="@layout/common_title"></include>

    <ScrollView
        android:id="@+id/scrollView"
        android:background="@color/gray_bg"
        android:layout_width="match_parent"
        android:paddingBottom="@dimen/x5"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/outLl"
            style="@style/MatchWrap"
            android:orientation="vertical">

            <LinearLayout style="@style/SgxqLL">

                <TextView
                    style="@style/SgxqTitle"
                    android:text="主要风险点" />

                <TextView
                    android:id="@+id/wxy_detail_mainrisk"
                    style="@style/SgxqContent"
                    android:text="" />

            </LinearLayout>


            <LinearLayout style="@style/SgxqLL">

                <TextView
                    style="@style/SgxqTitle"
                    android:text="主要危险" />

                <TextView
                    android:id="@+id/wxy_detail_maindanger"
                    style="@style/SgxqContent" />

            </LinearLayout>


            <LinearLayout style="@style/SgxqLL">

                <TextView
                    style="@style/SgxqTitle"
                    android:text="风险类型" />

                <TextView
                    android:id="@+id/wxy_detail_risktypename"
                    style="@style/SgxqContent" />

            </LinearLayout>

            <LinearLayout style="@style/SgxqLL">

                <TextView
                    style="@style/SgxqTitle"
                    android:text="是否重大危险源" />

                <TextView
                    android:id="@+id/wxy_detail_iszdwxy"
                    style="@style/SgxqContent" />

            </LinearLayout>

            <LinearLayout style="@style/SgxqLL">

                <TextView
                    style="@style/SgxqTitle"
                    android:text="创建时间" />

                <TextView
                    android:id="@+id/wxy_detail_createdate"
                    style="@style/SgxqContent" />

            </LinearLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x5"
                android:layout_marginTop="@dimen/x5"
                android:text="备注" />

            <TextView
                android:id="@+id/wxy_detail_memo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/x5"
                android:background="@drawable/editext_yb"
                android:minHeight="@dimen/x50"
                android:padding="@dimen/x5"
                android:text="" />

        </LinearLayout>
    </ScrollView>

    <ListView
        android:id="@+id/wxy_detai_filelist"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"></ListView>


</LinearLayout>
