<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="8"
        android:orientation="vertical">

        <TextView
            android:id="@+id/submission_item1"
            style="@style/TextStyle" />

        <TextView
            android:id="@+id/submission_item2"
            style="@style/TextStyle" />

        <TextView
            android:id="@+id/submission_item3"
            style="@style/TextStyle" />

        <TextView
            android:id="@+id/submission_item4"
            style="@style/TextStyle" />

        <TextView
            android:id="@+id/submission_item5"
            style="@style/TextStyle" />


    </LinearLayout>

    <cn.bingoogolapple.badgeview.BGABadgeLinearLayout
        android:id="@+id/submission_item_badge"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:gravity="center"
        app:badge_dragable="false"
        app:badge_gravity="rightTop"
        app:badge_padding="@dimen/x5">

        <ImageView
            android:layout_width="@dimen/x20"
            android:layout_height="@dimen/x20"
            android:layout_gravity="center"
            android:background="@drawable/right">

        </ImageView>
    </cn.bingoogolapple.badgeview.BGABadgeLinearLayout>

</LinearLayout>
